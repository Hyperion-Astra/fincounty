rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      // Allow a logged-in user to read/write only their own user doc
      allow read, update: if request.auth != null && request.auth.uid == userId;

      // Allow anyone to create their own user doc (registration)
      allow create: if request.auth != null && request.auth.uid == userId;

      // No one can delete user docs (you can adjust later if needed)
      allow delete: if false;
    }

    // Loans collection
    match /loans/{loanId} {
      // Users can read/write their own loans
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;

      // Admins can read/write all loans
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Optionally, allow admins to manage any collection
    match /{document=**} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
  }
}
